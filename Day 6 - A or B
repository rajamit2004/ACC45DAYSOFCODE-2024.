#include <iostream>
#include <algorithm>
using namespace std;

int main() {
    int T;
    cin >> T;

    while (T--) {
        int X, Y;
        cin >> X >> Y;

    
        int points_A_first = (500 - X * 2) + (1000 - (X + Y) * 4);
        
     
        int points_B_first = (1000 - Y * 4) + (500 - (X + Y) * 2);
        
    
        int max_points = max(points_A_first, points_B_first);
        

        cout << max_points << endl;
    }
